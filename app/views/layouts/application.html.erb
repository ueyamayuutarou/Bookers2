
  <head>
    <title>Bookers21</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header class="navbar navbar-inverse navbar-top">
    <div class="container">
      <nav class="nav navbar-nav navbar-left">
        <span>Bookers</span>
      </nav>
        <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
          <li class="nav-item"><%= link_to ' Home',user_path(current_user.id), class: "glyphicon glyphicon-home" %></li>
          <li class="nav-item"><%= link_to 'Users',users_path%></li>
          <li class="nac-item"><%= link_to 'Books',books_path%></li>
          <li class="nav-item"><%= link_to 'logout', destroy_user_session_path, method: :delete %>
      <% else %>
          <li class="nav-item"><a href="/">Home</a></li>
          <li class="nav-item"><%= link_to 'About',home_about_path %></li>
          <li class="nav-item"><%= link_to 'sign up', new_user_registration_path %></li>
          <li class="nav-item"><%= link_to 'login', new_user_session_path %></li></li>
      <% end %>
        </ul>
    </div>
   </header>
   <%= yield %>
  </body>
