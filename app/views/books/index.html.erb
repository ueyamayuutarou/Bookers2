
<div class="container">
<div class="row">
	<div class="col-xs-3">
		<%= render 'users/template', user: @user, book: @book, books: @books %>
	</div>
<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th>title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
		<td><%= link_to user_path(book.id) do %>
              <%= attachment_image_tag book.user,:profile_image, :fill,40,40,format:'jpg', fallback:'noimage.jpeg',size:'40x40' %>
            <% end %>
            </td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
			<td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
</div>
</div>