<% if flash[:notice] %>
<div class="flash">
  <%= flash[:notice] %>
</div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
     <%= render 'users/template', user: @user, book: @book, books: @books %>
    </div>
      <div class="col-xs-9">
          <h2>Books</h2>
        <table class="table table-hover table-inverse">
         <thead>
           <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           </tr>
           <% @books.each do |book| %>
           <tr><td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format:'jpg', fallback:'noimage.jpeg',size:'40x40' %></td>
           <td><%= link_to book.title, book_path(book.id) %></td>
           <td><%= book.body %></td></tr>
           <% end %>
         </thead>
        </table>
      </div>
    </div>
  </div>
</div>
